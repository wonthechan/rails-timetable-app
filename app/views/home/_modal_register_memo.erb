<div id="PopoverContent" style="display: none;">
	<h5 class="schedule-title">메모 등록하기</h5>
	<form action="/create_memo" accept-charset="UTF-8" data-remote="true" method="post">
		<div class="form-group">
			<label class="col-form-label">제목
				<input type="text" class="form-control" name="title" id="recipient-name" placeholder="제목 추가">
			</label>
		</div>
		<div class="form-group">
			<label for="message-text" class="col-form-label">설명</label>
			<textarea class="form-control" name="content" id="message-text" placeholder="설명 추가"></textarea>
		</div>
		<button type="submit" class="btn btn-primary btn-save" id="register_memo" name="course_id" value="">등록</button>
	</form>
</div>
